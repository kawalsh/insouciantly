$primary-color:#313131;
$light-color:#f0f0f0;
$dark-color:#560087;
$contrast-color:#007755;

@font-face {
	font-family: raleway;
	src: font_url("raleway-regular.ttf") format('truetype');
	line-height:1em;
}
@font-face {
	font-family: signpainter;
	src: font_url("signpainter.otf") format('opentype');
}

body {
	background-color:#ffffff;
	/*background-image: url("knitbg.jpg");*/
	font-family:raleway;
	color:$primary-color;
	font-size:1em;
	a {
			color: $dark-color;
			font-weight:bold;
	}
	a:hover {
			color: $contrast-color;
	}
}

h1 {
	font-family:raleway;
	font-size:2.5em;
	font-weight:bold;
	color:$contrast-color;
	line-height:1em;
	margin-top:5px;
}
h2 {
	font-family:raleway;
	font-size:1.375em;
	color:$contrast-color;
	margin:5px
}
h3 {
	font-family:signpainter;
	font-size:5em;
	font-weight:bold;
	color:$primary-color;
	margin:20px 0px 30px 0px;
}
h4 {
	font-family:signpainter;
	font-size:2em;
	font-weight:bold;
	color:$dark-color;
	margin:3px;
}
h5 {
	font-family:signpainter;
	font-size:2em;
	font-weight:bold;
	color:$contrast-color;
	margin:3px;
}

a:-webkit-any-link{
	text-decoration:none !important;
	background-color:transparent;
}

.book_image {
	display:inline-block;
	width:48%;
}
.book_info {
	display:inline-block;
	width:48%;
}
.button {
	padding:10px;
	font-size:2em;
	font-weight:bold;
	border-radius:5px;
	background-color:$dark-color!important;
	color:white;
}
.button:hover {
	color:white!important;
	background-color:$contrast-color!important;
}
.center {
	margin-left:auto;
	margin-right:auto;
}
.content {
	background-color:white;
	width:75%;
	padding:2%;
	/*border: 2px solid $dark-color;*/
	display:inline-block;
	margin-left:21%;
}
.date {
	font-family:signpainter;
	float:right;
	font-size:1.5em;
	font-weight:bold;
	padding:2px;
	color:$contrast-color;
	margin-top:0px;
}
.fizz {
	width:100%;
	margin-top:53px;
	position:relative;
	z-index:10;
}
.fizztext {
	font-family:raleway;
	font-size:3.25em;
	bottom:.75em;
	padding:10px;
	opacity:.9;
	width:98%;
	left:.5em;
	position:absolute;
	z-index:101;
	background-color:$contrast-color;
	color:white;
}
.hamburger {
	display:none;
	border-radius:3px;
	overflow:hidden;
	width:30px;
}
.header {
	width:100%;
	top:0px;
  left:0px;
  position:fixed;
	background:$light-color;
  margin:0px;
  padding:10px 0px 5px 0px;
  /*border-bottom:5px solid $dark-color;*/
	background-image: url("knitbg.jpg");
  z-index:1000;
}
.header-menu {
	display:inline-block;
	font-family:raleway;
	font-size:1.5em;
	font-color:$dark-color;
	margin:0px;
	width:18%;
	text-align:center;
	padding:0;
	a {
	    color: $dark-color;
	    font-weight:bold;
	}
	a:hover {
	    color: $contrast-color;
	}
}
.icon {
	display:none;
}
.logo {
	display:block;
	width:43%;
	text-align:right;
	margin:0;
}
.masonry-item {
	width:280px;
	background-color:white;
	margin:5px;
	overflow:hidden;
}
.masonry-item-lightbox {
	width:280px;
	overflow:hidden;
	margin:3px;
}
.masonry-photo{
	width:100%
}
.nav {
	float:right;
	font-size:1.5em;
	padding-right:1em;
}
.navsprite {
	display:inline-block;
	border-radius:3px;
	overflow:hidden;
	width:30px;
}
.rss {
	width:144px;
}
.sidebar {
	background-color:white;
	width:18%;
	/*border:2px solid $dark-color;*/
	display:inline-block;
	padding:5px;
	position:absolute;
	margin-bottom:15px;
}
.tag {
	border:1px solid $contrast-color;
	display:inline-block;
	margin:2px 0 2px 0;
	padding:3px;
	a {
			color: $contrast-color;
			font-weight:bold;
	}
	a:hover {
			color: white;
			background-color: $contrast-color;
	}
}
.tag-container {
	float:right;
}
.verb {
	font-family:raleway;
	font-size:.5em;
	margin:10px;
	color:$contrast-color;
}
.welcome {
	display:none;
}

@media (max-width:575px){

	.content {
		left:0px;
		top:10%;
		margin:0;
		width:96%;
		border:none !important;
	}
	.fizztext {
		font-size:1em;
		bottom:.75em;
		padding:10px;
	}
	.hamburger {
		display:inline-block;
	}
	.header-menu {
		font-size:1.2em;
	}
	.logo {
		width:43%;
		text-align:right;
		margin:0;
		font-size:4em;
	}
	.masonry-item {
		width:95%;
	}
	.masonry-item-lightbox {
		width:95%;
	}
	.nav {
		padding-right:.2em;
	}
	.sidebar {
		display:none !important;
	}
	.verb {
		font-size:.4em;
		font-weight:bold;
		margin:10px;
		color:$contrast-color;
	}
}


@media (min-width:576px) and (max-width:890px) {
	.content {
		left:0px;
		top:10%;
		margin:0;
		width:96%;
		border:none !important;
	}
	.fizztext {
		font-size:1.5em;
		bottom:.75em;
		padding:10px;
	}
	.masonry-item {
		width:45%;
	}
	.masonry-lightbox-item {
		width:45%;
	}
	.nav {
		padding-right:.2em;
	}
	.sidebar {
		display:none !important;
	}
}

@media (min-resolution:227dpi) and (max-width: 1080px) {
	.header {
    height:70px;
    margin:0px;
    padding-bottom:5px;
	}
	.header-menu {
		display:none;
	}
	.content {
		left:0px;
		top:10%;
		margin:0;
		width:96%;
		padding:2%;
		padding-bottom:70px;
		border:none;
	}
	.fizz {
		margin-top:22px;
	}
	.fizztext {
		font-size:3em;
		bottom:.75em;
	}
	.sidebar {
		display:none !important;
	}
	.logo {
		display:none;
	}
	.icon {
		display:inline-block;
		font-size:1.5em;
		float:down;
	}
	.hamburger {
		display:inline-block;
	}
	.masonry-item {
		width:95%;
	}
	.masonry-lightbox-item {
		width:45%;
	}
}

<% content_for :title do %>
	<h3 class="logo"><span class="verb">[read]</span>Insouciantly </h3>
<% end %>

<% content_for :fizz do  %>
	<span class = "fizztext">
		<%= @featured_blog.title %>
		<%= render :partial => "shared/book_stars", :locals => {:book => @featured_blog.book, :size => ".75", :white => true} %>
	</span>
	<%= image_tag(@featured_blog.fizz_photo.filepath, :class => "fizz") %>
<% end %>

<div class="date">
	<%= @featured_blog.posted_at.strftime("%B %-d, %Y") %>
</div>

<div>
	<%= @featured_blog.body.html_safe %>
</div>

<div class = "tag_container">
	<% @featured_blog.tags.each do |tag| %>
		<%= render :partial => "shared/tag", :locals => {:tag => tag} %>
	<% end %>
</div>

<% content_for :sidebar do %>
	<h2><%= link_to "Reading Updates", "www.google.com" %></h2>
	<% @read_feed.each do |blog| %>
		<div class="date"><%= blog.posted_at.strftime("%m/%d/%y")%></div>
		<%= image_tag(blog.fizz_photo.filepath, :width => "100%") %>
		<b><%= link_to blog.title, blog_url(blog) %></b><br />
		<%= render :partial => "shared/book_stars", :locals => {:book => @featured_blog.book, :size => "1.5", :white => false} %>
		<div><%= blog.body[0,130].html_safe %>. . .</div>
		<hr />
	<% end %>
<% end %>

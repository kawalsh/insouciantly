<% unless book.gr_id.nil? %>
  <% book_info = book.gr_api %>
  <% if info %>
    <div class="book_image">
      <%= link_to image_tag("#{book_info[:img_url]}", :width => "95%"), blog_url(book.blog) %>
    </div>
    <div class="book_info">
      <%= link_to book_info[:title], book_info[:link] %><br />
      by <%= link_to book_info[:author], book_info[:author_url] %><br />
      <%= render :partial => "shared/book_stars", :locals => {:book => book, :size => ".8", :white => false} %>
    </div>
  <% else %>
    <div width="100%; padding-right:5px">
      <%= link_to image_tag("#{book_info[:img_url]}"), blog_url(book.blog) %><br />
      <%= render :partial => "shared/book_stars", :locals => {:book => book, :size => "1", :white => false} %>
    </div>
  <% end %>
<% end %>

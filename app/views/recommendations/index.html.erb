<% content_for :head do %>
	<style>
		.fizz { display:inline-block; }
		.sidebar { display:inline-block; }
		.content { display:inline-block; }
		.welcome { display:none; }
	</style>
	<title>Dress Insouciantly - Book Recommendations</title>
	<meta name="description" content="blogging about book reviews, science fiction, fantasy, young adult, steampunk">
<% end %>

<% content_for :title do %>
	<h3 class="logo"><span class="verb">[read]</span>Insouciantly </h3>
<% end %>

<% content_for :fizz do  %>
	<span class = "fizztext">
		Book Recommendations
	</span>
	<%= image_tag("bookfizz2.jpg", :class => "fizz") %>
<% end %>

<% content_for :sidebar do %>
	<h2>Read with Insouciantly!</h2>
  <br />
	<%= link_to "Recommend a book!", new_recommendation_url %>
	<hr />
	<%= link_to "See All Book Recommendations", recommendations_url %>
<% end %>

<% @recs.each do |rec| %>
	<div style = "width:250px; display:inline-block">
		<%= render :partial => "shared/gr_book", :locals => {:book => rec.book, :info => false, :recommendation => true} %>
	</div>
<% end %>
